.page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background-color: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.product-list {
  background-color: #fff;
  padding: 20rpx;
}

.product-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.product-meta {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.product-stock {
  font-size: 24rpx;
  color: #666;
}

.low-stock {
  color: #ff4d4f;
}

.take-btn {
  display: flex;
  align-items: center;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}