/* pages/orders/addOrder/addOrder.wxss */

.page {
  width: 100%;
  min-height: 100vh;
  background-color: #f6f6f6;
  padding-bottom: 40rpx;
}

.form-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
}

.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  padding: 0 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.add-btn {
  font-size: 26rpx;
  color: #0066FF;
  padding: 8rpx 20rpx;
  border: 1rpx solid #0066FF;
  border-radius: 30rpx;
}

.form-group {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f9f9f9;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.required {
  color: #ff4d4f;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.picker-view {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.arrow-right {
  color: #999;
  font-size: 24rpx;
}

.form-textarea {
  width: 100%;
  height: 120rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #eee;
  padding: 10rpx;
  border-radius: 6rpx;
}

.product-list {
  padding: 20rpx 30rpx;
}

.product-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  position: relative;
  display: flex;
}

.product-content {
  flex: 1;
}

.product-row {
  display: flex;
  margin-bottom: 16rpx;
}

.product-label {
  width: 100rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 60rpx;
}

.product-input {
  flex: 1;
  height: 60rpx;
  font-size: 26rpx;
  background-color: #fff;
  border-radius: 6rpx;
  padding: 0 10rpx;
}

.product-subtotal {
  text-align: right;
  font-size: 26rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-top: 10rpx;
}

.product-delete {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.delete-icon {
  font-size: 32rpx;
  color: #ff4d4f;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 40rpx 0;
}

.order-total {
  text-align: right;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.form-actions {
  display: flex;
  padding: 40rpx 30rpx;
}

.btn-cancel, .btn-submit {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.btn-cancel {
  background-color: #f0f0f0;
  color: #666;
  margin-right: 20rpx;
}

.btn-submit {
  background-color: #0066FF;
  color: #fff;
} 