.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.login-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  display: inline-block;
  text-align: center;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

.login-form {
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.input-group {
  margin-bottom: 40rpx;
  position: relative;
}

.input-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.label-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #333;
  background: #fff;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input-field:focus {
  border-color: #0066FF;
  box-shadow: 0 0 0 4rpx rgba(0, 102, 255, 0.1);
}

.input-field::placeholder {
  color: #999;
}

.password-toggle {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 10rpx;
  margin-top: 30rpx;
}

.toggle-icon {
  font-size: 32rpx;
  color: #666;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
  border: none;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn.active {
  background: linear-gradient(135deg, #0066FF, #4d94ff);
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(0, 102, 255, 0.3);
}

.login-btn.active:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(0, 102, 255, 0.3);
}

.login-btn.disabled {
  background: #f5f5f5;
  color: #ccc;
  cursor: not-allowed;
}

.login-tips {
  margin-top: 40rpx;
  text-align: center;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .login-container {
    padding: 20rpx;
  }
  
  .login-form {
    padding: 40rpx 30rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
} 