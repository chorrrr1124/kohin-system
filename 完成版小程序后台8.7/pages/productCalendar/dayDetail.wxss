/* pages/productCalendar/dayDetail.wxss */
.detail-container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  color: #333;
  margin-bottom: 10rpx;
}

.date {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 20rpx;
}

.stats-card {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.stats-item:not(:last-child):after {
  content: '';
  position: absolute;
  right: 0;
  top: 15%;
  height: 70%;
  width: 1rpx;
  background-color: #f0f0f0;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.stats-value {
  font-size: 36rpx;
  font-weight: bold;
}

.stats-value.in {
  color: #4caf50;
}

.stats-value.out {
  color: #f44336;
}

.records-list {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
}

.list-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

.record-items {
  max-height: 800rpx;
  overflow-y: auto;
}

.record-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.record-content {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.record-type {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  margin-right: 15rpx;
}

.record-type.in {
  background-color: rgba(76, 175, 80, 0.1);
  color: #4caf50;
}

.record-type.out {
  background-color: rgba(244, 67, 54, 0.1);
  color: #f44336;
}

.record-quantity {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.record-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.record-operator {
  font-size: 24rpx;
  color: #999;
} 