.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

/* 空购物车样式 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  color: #ccc;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shop-btn {
  background-color: #0066FF;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.go-shop-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 购物车内容样式 */
.cart-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.cart-items {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  flex: 1;
}

.cart-item {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.item-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx dashed #eee;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  flex: 1;
  color: #333;
}

.item-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.item-details {
  margin-bottom: 20rpx;
  background-color: #f9f9f9;
  padding: 15rpx;
  border-radius: 8rpx;
}

.detail-item {
  font-size: 26rpx;
  color: #555;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.item-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.quantity-btn.minus {
  color: #999;
}

.quantity-btn.plus {
  color: #0066FF;
}

.quantity-number {
  width: 80rpx;
  text-align: center;
  font-size: 28rpx;
}

.delete-btn {
  color: #ff4d4f;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
}

/* 底部结算栏 */
.cart-footer {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.cart-total {
  font-size: 30rpx;
}

.total-price {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.clear-btn {
  padding: 15rpx 30rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.checkout-btn {
  padding: 15rpx 40rpx;
  background-color: #0066FF;
  color: white;
  border-radius: 30rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.checkout-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 客户和地址样式 */
.customer-section, .address-section, .payment-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-subtitle {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.info-item {
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  display: flex;
  flex-direction: column;
}

.info-item .label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.info-item .value {
  font-size: 28rpx;
  color: #333;
}

.info-item .value.placeholder {
  color: #999;
}

.customer-select-btn {
  cursor: pointer;
}

.arrow {
  color: #999;
  margin-left: 10rpx;
}

/* 支付方式样式 */
.payment-section {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
  border-radius: 12rpx;
}

.payment-methods {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 10rpx;
}

.payment-method {
  padding: 15rpx 30rpx;
  border: 1px solid #e0e0e0;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
}

.payment-method.selected {
  background-color: #007aff;
  color: #fff;
  border-color: #007aff;
}

/* 为预存按钮添加特殊样式 */
.payment-method[data-method="prestore"] {
  border-color: #ff9800;
  color: #ff9800;
  background-color: #fff8e1;
}

.payment-method[data-method="prestore"].selected {
  background-color: #ff9800;
  color: #fff;
  border-color: #ff9800;
}

/* 客户选择按钮样式 */
.customer-select-btn {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  margin: 10rpx 0;
  position: relative;
}

.customer-select-btn:active {
  background-color: #e9e9e9;
}

.customer-select-btn .value {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
  font-size: 28rpx;
  margin-left: 0;
}

.customer-select-btn .arrow {
  font-size: 28rpx;
  color: #999;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 客户选择弹窗样式 */
.customer-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1001;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  z-index: 1002;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.search-bar {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.search-bar input {
  width: 100%;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
}

/* 新建客户按钮样式 */
.add-customer-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  margin: 0 30rpx;
  background-color: #f0f8ff;
  border-radius: 8rpx;
  color: #0066FF;
  font-size: 28rpx;
  border: 1rpx dashed #0066FF;
}

.add-customer-btn:active {
  opacity: 0.8;
}

.add-customer-btn .add-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
  font-weight: bold;
}

.customer-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.customer-item {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.customer-item:active {
  background-color: #f9f9f9;
}

.customer-info {
  display: flex;
  flex-direction: column;
}

.customer-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.customer-phone {
  font-size: 26rpx;
  color: #666;
}

.loading, .empty-tip {
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 地址选择弹窗 */
.address-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s;
}

.address-modal.active {
  opacity: 1;
  visibility: visible;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 92%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  z-index: 1001;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.address-list {
  max-height: calc(60vh - 200rpx);
  overflow-y: auto;
  padding: 0 20rpx;
}

.address-item {
  position: relative;
  padding: 24rpx 20rpx 24rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fff;
}

.address-item.default {
  background-color: #f8f8ff;
}

.address-badge, .default-badge {
  display: inline-block;
  font-size: 22rpx;
  padding: 2rpx 14rpx;
  border-radius: 20rpx;
  margin-right: 12rpx;
  margin-bottom: 6rpx;
  vertical-align: middle;
}

.address-badge {
  background: #e6f2ff;
  color: #2196f3;
  border: 1rpx solid #b3e0ff;
}

.default-badge {
  background: #ffeaea;
  color: #ff4d4f;
  border: 1rpx solid #ffb3b3;
}

.address-info {
  display: flex;
  flex-direction: column;
}

.address-contact {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.address-name {
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.add-address-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  background-color: #f8f8f8;
  color: #007aff;
  font-size: 30rpx;
}

.add-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

/* 添加收货地址按钮样式 */
.address-btn {
  margin-top: 10px;
  background-color: #007aff;
  color: white;
  padding: 8px 15px;
  border-radius: 5px;
  font-size: 14px;
  text-align: center;
  display: inline-block;
}

.address-btn-text {
  color: white;
}