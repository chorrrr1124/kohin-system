.page {
  padding: 20rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.month-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.arrow {
  padding: 10rpx 30rpx;
  font-size: 32rpx;
  color: #333;
}

.current-month {
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 20rpx;
  min-width: 200rpx;
  text-align: center;
}

.legend {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}

.legend-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.legend-color.in {
  background-color: #67c23a;
}

.legend-color.out {
  background-color: #f56c6c;
}

.weekday-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1px solid #eeeeee;
  margin-bottom: 10rpx;
}

.weekday-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.calendar-grid {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
}

.calendar-day {
  width: 14.28%;
  height: 120rpx;
  box-sizing: border-box;
  padding: 10rpx;
  border: 1px solid #f0f0f0;
  position: relative;
  overflow: hidden;
}

.calendar-day.current-month {
  background-color: #ffffff;
}

.calendar-day:not(.current-month) {
  background-color: #f9f9f9;
  color: #999;
}

.calendar-day.today {
  background-color: #f2f8ff;
  border: 1px solid #a0cfff;
}

.calendar-day.has-records {
  background-color: #fafffe;
}

.day-number {
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.record-info {
  font-size: 20rpx;
}

.record {
  margin-top: 4rpx;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
  color: #fff;
  display: inline-block;
}

.record.in {
  background-color: #67c23a;
}

.record.out {
  background-color: #f56c6c;
}

.record-indicator {
  position: absolute;
  bottom: 6rpx;
  right: 6rpx;
}

.record-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #409eff;
}

.tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

.nav-link {
  color: #409eff;
  margin-top: 10rpx;
}

.calendar-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.calendar-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.calendar-item:last-child {
  border-bottom: none;
}

.date-section {
  width: 160rpx;
}

.date {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.day-of-week {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.records-section {
  flex: 1;
  padding: 0 30rpx;
}

.record {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.record:last-child {
  margin-bottom: 0;
}

.record.in {
  color: #52c41a;
}

.record.out {
  color: #ff4d4f;
}

.label {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.value {
  font-size: 28rpx;
  font-weight: 500;
}

.detail-btn {
  font-size: 26rpx;
  color: #0066FF;
  padding: 10rpx 20rpx;
}

.empty-tip {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999;
  font-size: 28rpx;
}

/* 月份导航 */
.month-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.nav-btn {
  padding: 10rpx 20rpx;
  color: #0066FF;
  font-size: 28rpx;
}

.month-title {
  font-size: 32rpx;
  font-weight: bold;
}

/* 当月领取统计 */
.month-stats {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stats-title {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

/* 记录类型切换 */
.record-type-tabs {
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.record-type-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.record-type-tab.active {
  color: #0066FF;
  font-weight: bold;
}

.record-type-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 6rpx;
  background-color: #0066FF;
  border-radius: 3rpx;
}

.calendar-container {
  width: 100%;
  background-color: #fff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.header {
  padding: 20rpx;
}

.month-title {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 16rpx 0;
  font-size: 36rpx;
  font-weight: bold;
}

.title {
  margin: 0 40rpx;
}

.prev-btn, .next-btn {
  font-size: 32rpx;
  color: #666;
  padding: 0 20rpx;
}

.legend-row {
  display: flex;
  justify-content: center;
  margin-top: 16rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
  font-size: 24rpx;
  color: #666;
}

.legend-item .dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.legend-item.in .dot {
  background-color: #4CAF50;
}

.legend-item.out .dot {
  background-color: #F44336;
}

/* 星期头部样式 */
.weekday-row {
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 10rpx 0;
  background-color: #f9f9f9;
}

.weekday-cell {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  padding: 10rpx 0;
}

/* 日历网格 */
.calendar-grid {
  display: flex;
  flex-wrap: wrap;
  border-left: 1px solid #eee;
}

.day-cell {
  width: calc(100% / 7);
  height: 140rpx;
  box-sizing: border-box;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
  padding: 10rpx;
  position: relative;
  overflow: hidden;
}

.day-number {
  font-size: 30rpx;
  font-weight: normal;
  margin-bottom: 10rpx;
  text-align: center;
}

.today .day-number {
  color: #fff;
  background-color: #F44336;
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 50%;
  text-align: center;
  margin: 0 auto 10rpx;
}

.other-month .day-number {
  color: #ccc;
}

.holiday-name {
  font-size: 20rpx;
  color: #4CAF50;
  text-align: center;
  background-color: #e8f5e9;
  border-radius: 4rpx;
  padding: 2rpx 4rpx;
  margin-bottom: 4rpx;
}

/* 出入库记录显示 */
.record-bar {
  height: 8rpx;
  margin-top: 4rpx;
  border-radius: 4rpx;
}

.record-bar.in {
  background-color: #4CAF50;
  margin-bottom: 4rpx;
}

.record-bar.out {
  background-color: #F44336;
}

.record-dot {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #2196F3;
}

/* 可滚动弹窗内记录样式 */
.calendar-record-item {
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.calendar-record-item:last-child {
  border-bottom: none;
}

.calendar-record-item .record-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.calendar-record-item .record-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.calendar-record-item .record-product {
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.calendar-record-item .record-time {
  font-size: 24rpx;
  color: #666;
}

.calendar-record-item .record-info {
  margin-bottom: 5rpx;
}

.calendar-record-item .record-action {
  font-size: 26rpx;
  color: #666;
}

.calendar-record-item .record-note {
  margin-top: 8rpx;
}

.calendar-record-item .record-note text {
  font-size: 24rpx;
  color: #999;
}