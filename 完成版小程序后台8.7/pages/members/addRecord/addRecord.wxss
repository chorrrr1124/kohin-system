/* pages/members/addRecord/addRecord.wxss */

.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.label.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 4rpx;
}

.input {
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.search-box {
  position: relative;
}

.search-input {
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.customer-list {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 100;
  display: none;
}

.customer-list.show {
  display: block;
}

.mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.list-content {
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  top: 200rpx;
  background: #fff;
  border-radius: 12rpx;
  max-height: 600rpx;
  padding: 20rpx 0;
}

.no-result {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

.customer-item {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.customer-item:last-child {
  border-bottom: none;
}

.customer-item:active {
  background: #f5f5f5;
}

.customer-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.customer-phone {
  font-size: 26rpx;
  color: #666;
}

.customer-info {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.info-item {
  font-size: 28rpx;
  color: #666;
}

.info-label {
  color: #999;
}

.radio-group {
  display: flex;
  gap: 30rpx;
}

.radio {
  font-size: 28rpx;
  color: #333;
}

.picker {
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  line-height: 88rpx;
}

.picker.placeholder {
  color: #999;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.button-group {
  margin-top: 60rpx;
  display: flex;
  gap: 30rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  line-height: 88rpx;
  text-align: center;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-primary {
  background: #0066FF;
  color: #fff;
}

/* 新建客户按钮 */
.new-customer-btn {
  padding: 20rpx 30rpx;
  text-align: center;
  background: #f8f8f8;
  color: #0066FF;
  font-size: 28rpx;
  margin-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.new-customer-btn:active {
  background: #f0f0f0;
}

.add-icon {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 8rpx;
}

/* 新建客户弹窗样式 */
.customer-modal {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 90%;
  max-height: 80vh;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.new-customer-form {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn, .save-btn {
  width: 200rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.save-btn {
  background: #0066FF;
  color: #fff;
} 