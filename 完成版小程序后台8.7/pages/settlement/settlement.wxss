.settlement-container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 通用样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 商品列表样式 */
.cart-list {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.cart-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.cart-item:last-child {
  border-bottom: none;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.item-price {
  font-size: 28rpx;
  color: #e64340;
}

.item-quantity {
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
}

.total-price {
  text-align: right;
  padding-top: 20rpx;
  font-size: 32rpx;
}

.price {
  color: #e64340;
  font-weight: bold;
}

/* 客户信息和地址样式 */
.customer-section,
.address-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.value.placeholder {
  color: #999;
}

.arrow {
  color: #999;
  margin-left: 10rpx;
}

/* 支付方式样式 */
.payment-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.payment-methods {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.payment-method {
  width: calc(33.33% - 14rpx);
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.payment-method.selected {
  background: #07c160;
  color: #fff;
  border-color: #07c160;
}

/* 提交订单按钮样式 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.total-info {
  font-size: 32rpx;
}

.submit-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  text-align: center;
}

/* 客户信息和收货信息样式 */
.customer-section,
.shipping-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
  padding-top: 6rpx;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.value input, .value textarea {
  width: 100%;
  padding: 10rpx 0;
}

.value textarea {
  height: 100rpx;
}

.value.placeholder {
  color: #999;
}

.arrow {
  color: #999;
  margin-left: 10rpx;
}

/* 客户选择弹窗 */
.customer-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999999;
  display: flex;
  justify-content: center;
  align-items: center;
  pointer-events: auto;
  opacity: 1;
  visibility: visible !important;
  transition: none;
}

.modal-content {
  background: #fff;
  width: 90%;
  max-height: 80vh;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  background: #f9f9f9;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-bar {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.search-bar input {
  background: #f5f5f5;
  height: 70rpx;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.customer-list {
  padding: 0 30rpx;
  flex: 1;
  overflow-y: auto;
  max-height: 40vh;
}

.loading, .empty-tip {
  padding: 30rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.customer-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.customer-item:last-child {
  border-bottom: none;
}

.customer-info {
  display: flex;
  flex-direction: column;
}

.customer-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.customer-phone {
  font-size: 26rpx;
  color: #666;
}

.modal-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.new-customer-btn {
  background: #07c160;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
}

/* 新建客户表单样式 */
.new-customer-form {
  padding: 10px 15px;
  max-height: 350px;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 15px;
}

.label {
  font-size: 14px;
  color: #333;
  margin-bottom: 5px;
}

.input {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  font-size: 14px;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
}

.cancel-btn, .save-btn {
  width: 45%;
  height: 40px;
  border-radius: 20px;
  font-size: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #333;
}

.save-btn {
  background-color: #07c160;
  color: #fff;
}

.customer-select-btn {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  margin: 10rpx 0;
  position: relative;
}

.customer-select-btn:active {
  background-color: #e9e9e9;
}

.customer-select-btn .value {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.customer-select-btn .arrow {
  font-size: 28rpx;
  color: #999;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}