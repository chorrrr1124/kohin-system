.section-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.form-group {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fff;
}

.form-label {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  color: #333;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.form-buttons {
  padding: 40rpx 20rpx 80rpx 20rpx; /* 增加底部内边距 */
  display: flex;
  flex-direction: row; /* 改为水平排列 */
  gap: 20rpx; /* 按钮间距 */
  background-color: #fff; /* 添加背景色 */
  position: relative; /* 为可能的固定定位做准备 */
}

