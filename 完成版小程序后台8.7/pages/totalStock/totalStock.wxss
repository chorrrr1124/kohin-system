/* pages/totalStock/totalStock.wxss */
.page {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.category-list {
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.category-item:last-child {
  border-bottom: none;
}

.category-name {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}

.category-count {
  font-size: 32rpx;
  color: #0066FF;
  font-weight: bold;
  margin-right: 20rpx;
}

.arrow {
  color: #999;
  font-size: 32rpx;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}