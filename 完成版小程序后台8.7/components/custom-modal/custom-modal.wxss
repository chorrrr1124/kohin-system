.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.modal-container {
  width: 85%;
  max-width: 500rpx;
  max-height: 90vh;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.3);
  animation: modalShow 0.3s ease-out;
  display: flex;
  flex-direction: column;
}

@keyframes modalShow {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
  background: #fafafa;
  flex-shrink: 0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  color: #999;
  cursor: pointer;
  border-radius: 50%;
  transition: all 0.2s;
  background-color: rgba(0, 0, 0, 0.05);
}

.modal-close:active {
  background-color: rgba(0, 0, 0, 0.15);
  color: #666;
  transform: scale(0.95);
}

.modal-content {
  padding: 56rpx 48rpx;
  min-height: 160rpx;
  max-height: 60vh;
  overflow-y: auto;
  flex: 1;
}

.modal-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #666;
  white-space: pre-line; /* 关键：支持换行 */
  word-wrap: break-word;
}

.modal-footer {
  display: flex;
  border-top: 2rpx solid #f0f0f0;
  border-radius: 0 0 24rpx 24rpx;
  overflow: hidden;
  height: 100rpx;
  flex-shrink: 0;
}

.modal-footer .modal-btn {
  flex: 1;
  height: 100rpx;
  border: none;
  font-size: 32rpx !important;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  line-height: 100rpx;
  border-radius: 0;
  box-sizing: border-box;
  min-height: 100rpx;
  width: auto;
  background: none;
  outline: none;
  position: relative;
}

.modal-footer .modal-btn::after {
  border: none;
  content: '';
}

.modal-footer .cancel-btn {
  background-color: #f8f8f8;
  color: #555;
  border-right: 2rpx solid #f0f0f0;
  font-weight: 500;
  border-radius: 0 0 0 24rpx;
}

.modal-footer .cancel-btn:active {
  background-color: #e8e8e8;
  transform: scale(0.98);
}

.modal-footer .confirm-btn {
  background-color: #007aff;
  color: #fff;
  box-shadow: inset 0 2rpx 0 rgba(255, 255, 255, 0.2), 0 2rpx 8rpx rgba(0, 122, 255, 0.2);
  font-weight: 500;
  border-radius: 0 0 24rpx 0;
}

.modal-footer .confirm-btn:active {
  background-color: #0056cc;
  transform: scale(0.98);
  box-shadow: inset 0 2rpx 0 rgba(255, 255, 255, 0.1);
} 