.address-page {
  padding-bottom: 120rpx;
  background-color: #f5f5f5;
}

.address-list {
  padding: 20rpx;
}

.address-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.address-item.selected {
  border: 2rpx solid #ff6b35;
}

.address-info {
  flex: 1;
  margin-right: 20rpx;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  gap: 20rpx;
}

.address-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
}

.default-tag {
  background-color: #ff6b35;
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.address-detail {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.address-actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-right: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  text-align: center;
  border: 1rpx solid #e0e0e0;
}

.edit-btn {
  color: #007aff;
  border-color: #007aff;
}

.delete-btn {
  color: #ff3b30;
  border-color: #ff3b30;
}

.radio-icon {
  display: flex;
  align-items: center;
}

.radio {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  position: relative;
}

.radio.checked {
  border-color: #ff6b35;
  background-color: #ff6b35;
}

.radio.checked::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
  height: 20rpx;
  background-color: #fff;
  border-radius: 50%;
}

.add-address-btn {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  border: 2rpx dashed #ddd;
}

.add-icon {
  font-size: 40rpx;
  color: #ff6b35;
  font-weight: bold;
}

.add-text {
  font-size: 28rpx;
  color: #666;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #e0e0e0;
}

.confirm-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ff6b35;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  text-align: center;
  margin: 0;
}

.confirm-btn:active {
  background-color: #e55a2b;
} 