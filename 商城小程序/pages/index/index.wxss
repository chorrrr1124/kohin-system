/* pages/index/index.wxss */

.page-container {
  background: #f5f5f5;
  min-height: 100vh;
  position: relative;
  padding-top: 0;
  margin-top: 0;
}

/* 轮播图区域 */
.carousel-section {
  position: relative;
  overflow: hidden;
  /* 轮播图不再需要额外的下边距，用户卡现在在轮播图内部 */
  margin-bottom: 0;
  z-index: 0; /* 独立堆叠上下文，避免遮挡后续内容 */
}

/* 轮播图内容覆盖层 */
.carousel-content-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  padding: 40rpx 30rpx 380rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  /* 确保触摸事件能正确传递到子元素 */
  pointer-events: none;
}

/* 轮播图内容覆盖层中的子元素需要恢复触摸事件 */
.floating-promo-carousel,
.floating-card-container {
  pointer-events: auto;
}

.promo-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}





/* 悬浮用户信息卡片容器 */
.floating-card-container {
  position: absolute;
  /* 调整到轮播图内容的底部 */
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  z-index: 20;
  box-sizing: border-box;
}

/* 浮动推广轮播图 */
.floating-promo-carousel {
  position: absolute;
  /* 上边距：系统导航栏下方5px（约80rpx导航区域高度 + 5px） */
  top: 160rpx;
  /* 左右边距和用户信息卡一样 */
  left: 30rpx;
  right: 30rpx;
  /* 下边距：用户信息卡上方5px（380rpx是底部卡片位置） */
  bottom: 385rpx;
  z-index: 10;
  border-radius: 24rpx;
  overflow: hidden;
  background: transparent;
  /* 确保触摸手势正常工作 */
  pointer-events: auto;
  touch-action: pan-x;
}

.promo-swiper {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  background: transparent;
  /* 确保触摸手势正常工作 */
  pointer-events: auto;
  touch-action: pan-x;
}

/* 自定义swiper样式 */
.floating-promo-carousel .t-swiper {
  background: transparent;
  border-radius: 24rpx;
  /* 确保触摸手势正常工作 */
  pointer-events: auto;
  touch-action: pan-x;
}

.floating-promo-carousel .t-swiper-host {
  background: transparent;
  border-radius: 24rpx;
  /* 确保触摸手势正常工作 */
  pointer-events: auto;
  touch-action: pan-x;
}

.floating-promo-carousel .t-swiper__item {
  background: transparent;
  border-radius: 24rpx;
  /* 确保触摸手势正常工作 */
  pointer-events: auto;
  touch-action: pan-x;
}

.floating-promo-carousel .t-swiper__image {
  border-radius: 24rpx;
  opacity: 0.9;
  /* 确保触摸手势正常工作 */
  pointer-events: auto;
  touch-action: pan-x;
}

/* 确保轮播图内容可以正常触摸 */
.floating-promo-carousel .t-swiper__content {
  pointer-events: auto;
  touch-action: pan-x;
}

/* 测试弹窗按钮样式 */
.test-section {
  padding: 40rpx 30rpx;
  text-align: center;
}

.test-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.test-btn::after {
  border: none;
}

.test-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(102, 126, 234, 0.3);
}



/* 主要内容区域 */
.main-content {
  background: #f5f5f5;
  padding: 30rpx;
  margin-top: 20rpx;
}

/* 悬浮的用户信息卡片 */
.floating-user-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  width: 100%;
}

.user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-greeting {
  flex: 1;
}

.greeting-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.user-stats {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  text-align: center;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #4CAF50;
}

.vip-badge-card {
  background: linear-gradient(45deg, #4CAF50, #66BB6A);
  padding: 16rpx 24rpx;
  border-radius: 50rpx;
}

.vip-badge-card text {
  color: #FFF;
  font-size: 24rpx;
  font-weight: bold;
}

/* 服务选择区域 */
.service-section {
  background: rgba(255, 255, 255, 0.95);
  margin-bottom: 30rpx;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.service-option {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.service-icon {
  font-size: 48rpx;
  width: 80rpx;
  text-align: center;
}

.service-info {
  flex: 1;
}

.service-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.service-desc {
  font-size: 24rpx;
  color: #666;
}

.service-divider {
  width: 2rpx;
  height: 80rpx;
  background: #E0E0E0;
  margin: 0 30rpx;
}

/* 功能按钮区域 */
.function-buttons {
  background: rgba(255, 255, 255, 0.95);
  margin-bottom: 30rpx;
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.function-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
}

.function-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 推荐商品区域 */
.recommend-section {
  background: rgba(255, 255, 255, 0.95);
  margin-bottom: 30rpx;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 商品网格 */
.product-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.product-card {
  width: calc(50% - 10rpx);
  background: #FFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease;
}

.product-card:active {
  transform: scale(0.98);
}

.product-card .product-image {
  width: 100%;
  height: 200rpx;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.4;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-container {
  flex: 1;
}

.product-price {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: 600;
}

.add-cart-btn {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(45deg, #4CAF50, #66BB6A);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx 0;
  color: rgba(0, 0, 0, 0.6);
}

.loading text {
  font-size: 28rpx;
}

 