/* pages/debug/debug.wxss */

.debug-container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.debug-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  text-align: center;
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.3);
}

.debug-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.debug-subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.debug-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.debug-btn {
  width: 100%;
  padding: 20rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 28rpx;
  margin-bottom: 15rpx;
  transition: all 0.3s ease;
}

.debug-btn.primary {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(76, 175, 80, 0.3);
}

.debug-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.4);
}

.debug-btn.secondary {
  background: linear-gradient(135deg, #FF9800 0%, #F57C00 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(255, 152, 0, 0.3);
}

.debug-btn.secondary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 152, 0, 0.4);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #666;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.log-container {
  height: 300rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #e9ecef;
}

.log-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 22rpx;
  line-height: 1.4;
}

.log-time {
  color: #6c757d;
  margin-right: 15rpx;
  min-width: 80rpx;
}

.log-level {
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  font-weight: bold;
  margin-right: 15rpx;
  min-width: 50rpx;
  text-align: center;
}

.log-level.INFO {
  background: #17a2b8;
  color: white;
}

.log-level.SUCCESS {
  background: #28a745;
  color: white;
}

.log-level.WARNING {
  background: #ffc107;
  color: #212529;
}

.log-level.ERROR {
  background: #dc3545;
  color: white;
}

.log-message {
  color: #495057;
  flex: 1;
  word-break: break-all;
}

.test-result {
  display: block;
  margin-top: 15rpx;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #495057;
  line-height: 1.4;
  border-left: 4rpx solid #4CAF50;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .debug-container {
    padding: 15rpx;
  }
  
  .debug-section {
    padding: 20rpx;
  }
  
  .log-container {
    height: 250rpx;
  }
} 