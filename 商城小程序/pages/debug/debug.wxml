<!--pages/debug/debug.wxml-->
<view class="debug-container">
  <view class="debug-header">
    <text class="debug-title">🐛 调试工具</text>
    <text class="debug-subtitle">系统诊断与测试</text>
  </view>

  <!-- 简化的测试区域 -->
  <view class="debug-section">
    <view class="section-title">🧪 基础测试</view>
    <button class="debug-btn primary" bindtap="testBasicFunction">
      测试基础功能
    </button>
    <text class="test-result">{{testResult}}</text>
  </view>

  <view class="debug-section">
    <view class="section-title">📱 系统信息</view>
    <view class="info-item">
      <text class="info-label">页面路径：</text>
      <text class="info-value">{{pageRoute}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">小程序版本：</text>
      <text class="info-value">{{systemInfo.version || '未知'}}</text>
    </view>
  </view>

  <view class="debug-section">
    <view class="section-title">📝 日志输出</view>
    <scroll-view class="log-container" scroll-y="true">
      <view class="log-item" wx:for="{{logs}}" wx:key="index">
        <text class="log-time">{{item.time}}</text>
        <text class="log-level {{item.level}}">{{item.level}}</text>
        <text class="log-message">{{item.message}}</text>
      </view>
    </scroll-view>
    <button class="debug-btn secondary" bindtap="clearLogs">
      清空日志
    </button>
  </view>
</view> 