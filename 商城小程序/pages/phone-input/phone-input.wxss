/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 标题区域 */
.title-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255,255,255,0.8);
  line-height: 1.5;
}

/* 表单卡片 */
.form-card {
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  width: 100%;
  max-width: 600rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.1);
  backdrop-filter: blur(10rpx);
}

/* 输入框组 */
.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-wrapper {
  position: relative;
  border: 2rpx solid #e1e5e9;
  border-radius: 16rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.phone-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.phone-input::placeholder {
  color: #999;
}

/* 验证码区域 */
.code-section {
  display: flex;
  gap: 20rpx;
  align-items: flex-end;
}

.code-input-wrapper {
  flex: 1;
  border: 2rpx solid #e1e5e9;
  border-radius: 16rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.code-input-wrapper:focus-within {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.code-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.send-code-btn {
  width: 200rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.send-code-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.send-code-btn:disabled {
  background: #ccc;
  color: #999;
  transform: none;
  box-shadow: none;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.3);
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.login-btn:disabled {
  background: #ccc;
  color: #999;
  transform: none;
  box-shadow: none;
}

/* 底部提示 */
.bottom-tips {
  margin-top: 40rpx;
  text-align: center;
}

.tips-text {
  font-size: 24rpx;
  color: rgba(255,255,255,0.7);
  line-height: 1.5;
}

/* 加载状态 */
.loading {
  opacity: 0.7;
  pointer-events: none;
}

/* 错误提示 */
.error-tip {
  color: #ff4757;
  font-size: 24rpx;
  margin-top: 12rpx;
  text-align: center;
}

/* 成功提示 */
.success-tip {
  color: #2ed573;
  font-size: 24rpx;
  margin-top: 12rpx;
  text-align: center;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .container {
    padding: 20rpx;
  }
  
  .form-card {
    padding: 40rpx 30rpx;
  }
  
  .code-section {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .send-code-btn {
    width: 100%;
  }
} 