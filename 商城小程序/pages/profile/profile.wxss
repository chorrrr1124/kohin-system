/* pages/profile/profile.wxss */

/* 页面容器 */
.profile-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}



/* 会员卡 */
.member-card {
  margin: 20rpx 30rpx;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #d4e8c4, #b8d49a);
  border-radius: 20rpx;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.member-code-btn {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 25rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.member-code-text {
  font-size: 24rpx;
  color: #2d2d2d;
  font-weight: 500;
}

.user-identity {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 20rpx;
}

.identity-left {
  flex: 1;
}

.level-badge {
  background: #333;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
  margin-bottom: 15rpx;
}

.level-text {
  font-size: 24rpx;
  color: white;
  font-weight: 600;
}

.user-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2d2d2d;
  margin-bottom: 20rpx;
  display: block;
}

.progress-section {
  margin-bottom: 15rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background: #ffd700;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 26rpx;
  color: #2d2d2d;
  font-weight: 600;
  display: block;
}

.upgrade-text {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
  display: block;
}

.mascot-duck {
  text-align: center;
  margin-top: 20rpx;
}

.duck-emoji {
  font-size: 80rpx;
  display: block;
  margin-bottom: 10rpx;
}

.duck-label {
  font-size: 20rpx;
  color: white;
  background: rgba(0, 0, 0, 0.3);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

/* 积分过期提醒 */
.notice-banner {
  margin: 20rpx 30rpx;
  padding: 24rpx 30rpx;
  background-color: #fff3cd;
  border-radius: 16rpx;
  border-left: 6rpx solid #ffc107;
}

.notice-text {
  font-size: 26rpx;
  color: #856404;
}

/* 我的功能区域 */
.function-section {
  margin: 20rpx 30rpx;
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d2d2d;
  margin-bottom: 40rpx;
  display: block;
}

.function-grid {
  display: flex;
  flex-direction: column;
  gap: 50rpx;
}

.function-row {
  display: flex;
  justify-content: space-between;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.function-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
}

.function-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 心意礼卡区域 */
.gift-section {
  margin: 20rpx 30rpx;
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.gift-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.view-all {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.view-all-text {
  font-size: 26rpx;
  color: #666;
}

.arrow {
  font-size: 20rpx;
  color: #666;
}

.gift-cards {
  display: flex;
  gap: 20rpx;
}

.gift-card {
  flex: 1;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

.gift-image {
  width: 100%;
  height: 240rpx;
  border-radius: 16rpx;
}

.gift-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 30rpx 20rpx 20rpx;
  color: white;
}

.gift-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.price-symbol {
  font-size: 20rpx;
  margin-right: 4rpx;
}

.price-value {
  font-size: 32rpx;
  font-weight: 600;
}

.gift-title {
  font-size: 24rpx;
  margin-bottom: 4rpx;
  display: block;
}

.gift-brand {
  font-size: 20rpx;
  opacity: 0.8;
  display: block;
}

/* 我的资产 */
.assets-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.assets-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.asset-item {
  text-align: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  position: relative;
}

.asset-value {
  font-size: 36rpx;
  color: #4a5a3a;
  font-weight: 700;
  margin-bottom: 8rpx;
  display: block;
}

.asset-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.asset-icon {
  font-size: 32rpx;
  opacity: 0.3;
  position: absolute;
  bottom: 15rpx;
  right: 15rpx;
}

/* 会员信息区域 */
.member-section {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  padding: 40rpx 30rpx;
  border-radius: 0 0 30rpx 30rpx;
  position: relative;
  overflow: hidden;
}

.member-header {
  flex: 1;
}

.member-code {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  display: inline-block;
  margin-bottom: 20rpx;
}

.code-text {
  color: white;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.level-text {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.member-title {
  margin-bottom: 30rpx;
}

.title-text {
  color: #2c3e50;
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.progress-section {
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FFD700 0%, #FFA500 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  color: #2c3e50;
  font-size: 24rpx;
  font-weight: 500;
}

.member-avatar {
  position: absolute;
  right: 30rpx;
  top: 40rpx;
  text-align: center;
}

.duck-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 16rpx;
}

.expert-badge {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 16rpx;
  padding: 8rpx 16rpx;
}

.badge-text {
  color: white;
  font-size: 20rpx;
  font-weight: bold;
}

