/* pages/profile/profile.wxss */

/* 页面容器 */
.profile-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}



/* 用户信息卡片 */
.user-card {
  margin: 20rpx 30rpx;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #d4e8c4, #b8d49a);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 用户头像区域 */
.user-avatar-section {
  margin-right: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.8);
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 用户信息区域 */
.user-info-section {
  flex: 1;
}

.user-greeting {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.greeting-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d2d2d;
  margin-right: 20rpx;
}

.vip-badge {
  background-color: #4a5a3a;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.user-stats {
  display: flex;
  gap: 60rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #2d2d2d;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 二维码图标 */
.qr-code {
  position: absolute;
  right: 30rpx;
  top: 40rpx;
}

.qr-icon {
  width: 48rpx;
  height: 48rpx;
  border: 2rpx solid #2d2d2d;
  color: #2d2d2d;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

/* 成长值区域 */
.growth-section {
  margin: 20rpx 30rpx;
  padding: 0 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.growth-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.growth-label {
  font-size: 28rpx;
  color: #666;
}

.growth-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d2d2d;
}

.progress-bar {
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #2d2d2d;
  border-radius: 6rpx;
}

.growth-level {
  text-align: right;
  font-size: 28rpx;
  color: #666;
  display: block;
}

/* 积分过期提醒 */
.notice-banner {
  margin: 20rpx 30rpx;
  padding: 24rpx 30rpx;
  background-color: #fff3cd;
  border-radius: 16rpx;
  border-left: 6rpx solid #ffc107;
}

.notice-text {
  font-size: 26rpx;
  color: #856404;
}

/* 我的功能区域 */
.function-section {
  margin: 20rpx 30rpx;
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d2d2d;
  margin-bottom: 40rpx;
  display: block;
}

.function-grid {
  display: flex;
  flex-direction: column;
  gap: 50rpx;
}

.function-row {
  display: flex;
  justify-content: space-between;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.function-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
}

.function-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 心意礼卡区域 */
.gift-section {
  margin: 20rpx 30rpx;
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.gift-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.view-all {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.view-all-text {
  font-size: 26rpx;
  color: #666;
}

.arrow {
  font-size: 20rpx;
  color: #666;
}

.gift-cards {
  display: flex;
  gap: 20rpx;
}

.gift-card {
  flex: 1;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

.gift-image {
  width: 100%;
  height: 240rpx;
  border-radius: 16rpx;
}

.gift-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 30rpx 20rpx 20rpx;
  color: white;
}

.gift-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.price-symbol {
  font-size: 20rpx;
  margin-right: 4rpx;
}

.price-value {
  font-size: 32rpx;
  font-weight: 600;
}

.gift-title {
  font-size: 24rpx;
  margin-bottom: 4rpx;
  display: block;
}

.gift-brand {
  font-size: 20rpx;
  opacity: 0.8;
  display: block;
}

