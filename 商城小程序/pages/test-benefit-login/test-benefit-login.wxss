/* pages/test-benefit-login/test-benefit-login.wxss */
.container {
  padding: 40rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.content {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.test-section {
  margin-bottom: 60rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.test-btn {
  width: 100%;
  height: 88rpx;
  background: #27ae60;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.clear-btn {
  background: #95a5a6;
}

.status-section {
  margin-bottom: 60rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.status-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.status-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.status-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.info-section {
  padding: 24rpx;
  background: #e8f5e8;
  border-radius: 12rpx;
  border-left: 8rpx solid #27ae60;
}

.info-item {
  margin-bottom: 12rpx;
}

.info-text {
  font-size: 26rpx;
  color: #2c5530;
  line-height: 1.6;
} 