/* 手机号获取功能演示页面样式 */
.container {
  padding: 40rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 状态区域 */
.status-section {
  margin-bottom: 40rpx;
}

.status-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-badge.success {
  background: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

.status-badge.pending {
  background: rgba(255, 152, 0, 0.1);
  color: #ff9800;
}

/* 手机号显示 */
.phone-display {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  padding: 30rpx;
  border-radius: 16rpx;
  border: 1rpx solid #e9ecef;
}

.phone-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
}

.phone-number {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  letter-spacing: 2rpx;
}

.phone-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  background: #fff;
  border: 1rpx solid #e9ecef;
  color: #333;
}

.action-btn.danger {
  background: #fff5f5;
  border-color: #fed7d7;
  color: #e53e3e;
}

/* 无手机号状态 */
.no-phone {
  text-align: center;
  padding: 60rpx 0;
}

.no-phone-text {
  font-size: 28rpx;
  color: #999;
}

/* 操作区域 */
.action-section {
  margin-bottom: 40rpx;
}

.primary-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #fff;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.secondary-btn {
  width: 100%;
  height: 80rpx;
  background: #fff;
  color: #333;
  border: 1rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-weight: 500;
}

/* 调试信息 */
.debug-section {
  margin-bottom: 40rpx;
}

.debug-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.debug-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.debug-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.debug-actions {
  display: flex;
  gap: 12rpx;
}

.debug-btn {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  background: #f0f0f0;
  border: 1rpx solid #e0e0e0;
  color: #666;
}

.debug-list {
  background: #1e1e1e;
  border-radius: 16rpx;
  padding: 20rpx;
  max-height: 400rpx;
  overflow-y: auto;
}

.debug-item {
  padding: 8rpx 0;
  border-bottom: 1rpx solid #333;
}

.debug-item:last-child {
  border-bottom: none;
}

.debug-text {
  font-size: 24rpx;
  color: #00ff00;
  font-family: 'Courier New', monospace;
  line-height: 1.4;
}

/* 历史记录 */
.history-section {
  margin-bottom: 40rpx;
}

.history-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.history-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.history-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.history-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.history-status {
  margin-bottom: 12rpx;
}

.status-text {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-text.success {
  background: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

.status-text.error {
  background: rgba(229, 62, 62, 0.1);
  color: #e53e3e;
}

.status-text.rejected {
  background: rgba(255, 152, 0, 0.1);
  color: #ff9800;
}

.status-text.quota_exceeded {
  background: rgba(156, 39, 176, 0.1);
  color: #9c27b0;
}

.status-text.use_other {
  background: rgba(33, 150, 243, 0.1);
  color: #2196f3;
}

.history-detail {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.detail-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 8rpx;
}

.detail-value {
  font-size: 24rpx;
  color: #333;
  font-family: monospace;
}

.detail-value.error {
  color: #e53e3e;
}

/* 功能说明 */
.info-section {
  margin-bottom: 40rpx;
}

.info-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.info-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 30rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .status-card,
  .info-card {
    padding: 30rpx;
  }
} 