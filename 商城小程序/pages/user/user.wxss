/* pages/user/user.wxss */
.page { background: #f4f5f7; min-height: 100vh; }
.section { margin: 16rpx; }
.cell { display:flex; align-items:center; justify-content:space-between; padding: 28rpx 24rpx; border-radius: 16rpx; background:#fff; }
.cell-text { color:#333; font-size: 30rpx; }
.cell-arrow { color:#999; font-size: 36rpx; }
.footer { position: fixed; left: 0; right: 0; bottom: env(safe-area-inset-bottom); padding: 24rpx; background: transparent; }
.logout { width: 100%; background: #fff; color:#333; border: 1px solid #eee; padding: 24rpx 0; border-radius: 16rpx; } 