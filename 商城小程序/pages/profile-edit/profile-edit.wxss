/* pages/profile-edit/profile-edit.wxss */
.profile-edit {
  padding-bottom: 24rpx;
  background: #f7f7f7;
  min-height: 100vh;
}



.form-card {
  margin: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.form-item {
  padding: 28rpx 24rpx;
  border-bottom: 1px solid #f1f1f1;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.input {
  margin-top: 12rpx;
  background: #fff;
  padding: 12rpx 0;
  font-size: 28rpx;
  border: none;
  outline: none;
}

.gender {
  display: flex;
  gap: 24rpx;
  margin-top: 12rpx;
}

.gender-btn {
  padding: 12rpx 32rpx;
  border: 1px solid #e5e5e5;
  border-radius: 8rpx;
  color: #333;
  background: #fff;
  transition: all 0.3s ease;
}

.gender-btn.active {
  border-color: #4CAF50;
  color: #4CAF50;
  background: #eaffea;
}

.phone-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
}

.phone-text {
  color: #333;
  font-size: 28rpx;
}

.change-btn {
  background: #eaffea;
  color: #4CAF50;
  border: 1px solid #4CAF50;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
}

.picker-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
  padding: 12rpx 0;
}

.picker-text {
  color: #666;
  font-size: 28rpx;
}

.arrow {
  color: #999;
  font-size: 36rpx;
}

.tip {
  margin-top: 8rpx;
  color: #999;
  font-size: 22rpx;
}

.footer {
  margin: 32rpx 24rpx 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  background: transparent;
  padding: 0;
}

.save-btn {
  width: 90%;
  background: #4CAF50;
  color: #fff;
  border-radius: 12rpx;
  border: none;
  padding: 20rpx 0;
  font-size: 32rpx;
}

.account-link {
  color: #666;
  font-size: 28rpx;
  text-decoration: none;
}

/* 头像区域样式 */
.avatar-block {
  margin-top: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  background: #eee;
}

.avatar-refresh {
  position: absolute;
  right: calc(50% - 90rpx + 8rpx);
  bottom: 6rpx;
  background: #ffffff;
  border-radius: 28rpx;
  padding: 6rpx 12rpx;
  color: #4CAF50;
  border: 1px solid #e5e5e5;
  font-size: 24rpx;
}

/* 新增：导入收货地址按钮 */
.import-btn {
  margin-top: 12rpx;
  background: #fff7e6;
  color: #fa8c16;
  border: 1px solid #ffd591;
  font-size: 24rpx;
  padding: 10rpx 16rpx;
  border-radius: 6rpx;
  width: auto;
} 