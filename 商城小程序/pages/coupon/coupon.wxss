/* pages/coupon/coupon.wxss */
.coupon-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 16rpx;
  box-sizing: border-box;
}

.coupon-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.coupon-item {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  position: relative;
}

.coupon-main {
  display: flex;
  padding: 24rpx;
}

.coupon-left {
  width: 160rpx;
  text-align: center;
  border-right: 1rpx dashed #e5e5e5;
  padding-right: 24rpx;
  margin-right: 24rpx;
}

.coupon-value {
  display: flex;
  justify-content: center;
  align-items: baseline;
  color: #fa5151;
  margin-bottom: 8rpx;
}

.value {
  font-size: 64rpx;
  font-weight: bold;
}

.unit {
  font-size: 24rpx;
  margin-left: 4rpx;
}

.coupon-condition {
  font-size: 22rpx;
  color: #666;
}

.coupon-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.coupon-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.coupon-validity {
  font-size: 22rpx;
  color: #999;
}

.coupon-footer {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  border-top: 1rpx solid #f0f0f0;
  gap: 20rpx;
}

.coupon-footer .usage-rules {
  flex-shrink: 0;
}

.coupon-footer .coupon-actions {
  flex: 0 0 auto;
  margin-left: auto;
}

.usage-rules {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #666;
  width: 120rpx;
  flex-shrink: 0;
}

.arrow {
  width: 22rpx;
  height: 22rpx;
  margin-left: 8rpx;
  transition: transform 0.3s ease;
}

.arrow.expanded {
  transform: rotate(180deg);
}

.coupon-actions {
  display: inline-flex;
  gap: 10rpx;
  min-width: 0;
  justify-content: flex-end;
}

.action-btn {
  padding: 0 10rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 24rpx;
  font-size: 20rpx;
  text-align: center;
  border: 1rpx solid;
  white-space: nowrap;
}

.share-btn {
  flex: 0 0 auto;
  background: #fff;
  color: #4caf50;
  border-color: #4caf50;
}

.use-btn {
  flex: 0 0 auto;
  background: #4caf50;
  color: #fff;
  border-color: #4caf50;
}

.rules-details {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.4s ease-out;
  background: #f7f8fa;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #666;
}

.rules-details.expanded {
  max-height: 300rpx; /* 足够的高度以显示内容 */
  padding: 20rpx 30rpx;
}

.rule-item {
  padding: 8rpx 0;
}

.coupon-item.used {
  filter: grayscale(1);
  opacity: 0.7;
}

.used-stamp {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
  border: 2rpx solid #ccc;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  transform: rotate(15deg);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.get-coupon-btn {
  background: #4caf50;
  color: white;
  padding: 16rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.get-coupon-btn {
  background: #ff6b6b;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
}