/* pages/coupon/coupon.wxss */
.coupon-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 16rpx;
  box-sizing: border-box;
}

.coupon-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.coupon-item {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  position: relative;
}

.coupon-main {
  display: flex;
  padding: 44rpx 24rpx; /* 增加上下内边距从24rpx到44rpx，增加20rpx */
}

.coupon-left {
  width: 160rpx;
  text-align: center;
  border-right: 1rpx dashed #e5e5e5;
  padding-right: 24rpx;
  margin-right: 24rpx;
}

.coupon-value {
  display: flex;
  justify-content: center;
  align-items: baseline;
  color: #fa5151;
  margin-bottom: 8rpx;
}

.value {
  font-size: 64rpx;
  font-weight: bold;
}

.unit {
  font-size: 24rpx;
  margin-left: 4rpx;
}

.coupon-condition {
  font-size: 22rpx;
  color: #666;
}

.coupon-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.coupon-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.coupon-validity {
  font-size: 22rpx;
  color: #999;
}

.coupon-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.usage-rules {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.arrow {
  margin-left: 8rpx;
  transition: transform 0.3s ease;
}

.arrow.expanded {
  transform: rotate(180deg);
}

.coupon-actions {
  display: flex;
  gap: 2rpx; /* 缩减按钮间距，从16rpx到2rpx */
}

.action-btn {
  border: 1rpx solid;
  width: 120rpx;
  flex-shrink: 0;
  padding: 0 20rpx;
  font-size: 24rpx;
  text-align: center;
  border-radius: 8rpx;
  background: #fff;
  color: #4caf50;
  border-color: #4caf50;
}

.share-btn {
  background: #fff;
  color: #4caf50;
  border-color: #4caf50;
}

.use-btn {
  background: #4caf50;
  color: #fff;
  border-color: #4caf50;
}

.rules-details {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.4s ease-out;
  background: #f7f8fa;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #666;
  opacity: 0;
  transform: translateY(-10rpx);
}

.rules-details.expanded {
  max-height: 300rpx; /* 足够的高度以显示内容 */
  padding: 30rpx 30rpx; /* 增加上下内边距从20rpx到30rpx */
  opacity: 1;
  transform: translateY(0);
}

.rule-item {
  padding: 8rpx 0;
}

.coupon-item.used {
  filter: grayscale(1);
  opacity: 0.7;
}

.used-stamp {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
  border: 2rpx solid #ccc;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  transform: rotate(15deg);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.get-coupon-btn {
  background: #ff6b6b;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx; /* 增加上边距从10rpx到20rpx */
  padding: 10rpx 0 !important; /* 减少上下内边距从20rpx到10rpx */
  position: relative;
}

.action-buttons::before {
  content: '';
  position: absolute;
  top: -5rpx; /* 分隔线下移5px（约10rpx），从-15rpx到-5rpx */
  left: 24rpx;
  right: 24rpx;
  height: 1rpx;
  background: #e5e5e5;
}

.rules-toggle {
  font-size: 20rpx;
  color: #999;
  background: none;
  border: none;
  padding: 8rpx 0; /* 增加上下内边距8rpx */
  text-align: left;
  display: flex;
  align-items: center;
  min-width: 120rpx;
  flex-shrink: 0;
  margin-top: 0 !important; /* 移除负边距 */
  transform: none; /* 移除位移 */
  margin-left: 20rpx !important; /* 增加左边距，让使用规则不要太靠左 */
}

.rules-toggle::after {
  content: '';
  border: none;
}

.button-group {
  display: flex;
  gap: 0; /* 完全移除按钮间距 */
  flex-shrink: 0;
  margin-top: 0 !important; /* 移除负边距 */
  transform: none; /* 移除位移 */
  width: 33%;
  justify-content: flex-end;
}

/* 让第二个按钮向左移动，与第一个按钮重叠 */
.button-group .coupon-btn:last-child {
  margin-left: -2rpx; /* 向左移动2rpx，让按钮重叠 */
}

.coupon-btn {
  border: 1rpx solid;
  width: 90rpx !important; /* 增加按钮宽度5px（约10rpx），从80rpx到90rpx */
  min-width: 90rpx !important; /* 增加按钮宽度5px（约10rpx），从80rpx到90rpx */
  max-width: 90rpx !important; /* 增加按钮宽度5px（约10rpx），从80rpx到90rpx */
  flex-shrink: 0;
  padding: 0; /* 完全移除内边距 */
  font-size: 20rpx;
  text-align: center;
  border-radius: 16rpx; /* 增加圆角角度，从11rpx到16rpx，让圆角更明显 */
  line-height: 1.2;
  white-space: nowrap;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 48rpx !important; /* 减少按钮高度从52rpx到48rpx */
}

.coupon-btn::after {
  border: none;
}

.coupon-btn.share-btn {
  background: #4CAF50;
  color: white;
  border-color: #4CAF50;
}

.coupon-btn.use-btn {
  background: #2196F3;
  color: white;
  border-color: #2196F3;
}

.coupon-btn:disabled {
  background: #ccc;
  color: #999;
  border-color: #ccc;
}

.coupon-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  margin: 0 24rpx 26rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

/* 加载状态样式 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #2196F3;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态样式 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.error-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
  text-align: center;
}

.retry-btn {
  background: #2196F3;
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}

.retry-btn::after {
  border: none;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.get-coupon-btn {
  background: #2196F3;
  color: white;
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  cursor: pointer;
}

