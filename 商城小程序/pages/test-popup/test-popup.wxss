/* 弹窗测试页面样式 */
.container {
  padding: 40rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.test-buttons {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 60rpx;
}

.test-btn {
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.test-btn::after {
  border: none;
}

.test-btn.primary {
  background: #07c160;
  color: #fff;
}

.test-btn.secondary {
  background: #fff;
  color: #666;
  border: 2rpx solid #ddd;
}

.instructions {
  background: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

.instruction-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.instruction-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.instruction-text:last-child {
  margin-bottom: 0;
}

/* 设备信息样式 */
.device-info {
  background: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

.device-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.device-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.device-text:last-child {
  margin-bottom: 0;
}

/* 测试结果样式 */
.test-results {
  background: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.results-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.result-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  border-left: 4rpx solid #dee2e6;
}

.result-item:last-child {
  margin-bottom: 0;
}

.result-time {
  font-size: 22rpx;
  color: #999;
  font-family: monospace;
}

.result-type {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.result-status {
  font-size: 24rpx;
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  align-self: flex-start;
}

.result-status.success {
  background: #d4edda;
  color: #155724;
}

.result-status.failed {
  background: #f8d7da;
  color: #721c24;
}

.result-detail {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
} 