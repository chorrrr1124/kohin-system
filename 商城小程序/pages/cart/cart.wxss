/* pages/cart/cart.wxss */
.mall-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部搜索栏 */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
  margin: 0 20rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.header-right {
  display: flex;
  align-items: center;
}

.menu-icon, .scan-icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
  opacity: 0.7;
}

/* 分类导航 */
.category-nav {
  background-color: #fff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
}

.category-tabs {
  display: flex;
  align-items: center;
}

.category-tab {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  margin-right: 60rpx;
  position: relative;
}

.category-tab.active .tab-text {
  color: #333;
  font-weight: bold;
}

.tab-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #4CAF50;
  border-radius: 3rpx;
}

/* 品牌名称样式 */
.brand-name {
  font-size: 32rpx;
  color: #111;
}

/* 内容区域 */
.content-wrapper {
  display: flex;
  background-color: #fff;
}

/* 侧边分类菜单 */
.side-menu {
  width: 200rpx;
  background-color: #f8f8f8;
  border-right: 1rpx solid #eee;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  height: 140rpx;
  padding: 30rpx 20rpx;
  position: relative;
  background-color: #f8f8f8;
  box-sizing: border-box;
}

.menu-item.active {
  background-color: #fff;
}

.menu-item.active::after {
  content: "";
  position: absolute;
  top: 0;
  right: 0;
  width: 6rpx;
  height: 100%;
  background-color: #4CAF50;
  border-radius: 6rpx;
}

.menu-badge {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  background-color: #ff4757;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  transform: scale(0.8);
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
  margin-left: 0;
}

.menu-text {
  font-size: 26rpx;
  color: #333;
  text-align: left;
  line-height: 36rpx;
  max-width: 160rpx;
  word-break: break-all;
}

/* 商品区域 */
.products-area {
  flex: 1;
  padding: 30rpx;
}

/* 商品列表 */
.products-list {
  flex: 1;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.product-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.product-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 15rpx;
  margin-right: 30rpx;
  background-color: #f0f0f0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.3;
  margin-bottom: 10rpx;
}

.product-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.product-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.product-price {
  font-size: 36rpx;
  color: #ff6b35;
  font-weight: bold;
}

.add-to-cart-btn {
  background-color: #4CAF50;
  color: white;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  border: none;
}

/* 底部购物车 */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #666;
  color: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.cart-info {
  display: flex;
  align-items: center;
}

.cart-badge {
  background-color: #4CAF50;
  color: white;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-right: 15rpx;
}

.cart-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
  opacity: 0.8;
}

.cart-text {
  font-size: 26rpx;
  color: #ccc;
} 