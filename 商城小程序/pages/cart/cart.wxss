/* pages/cart/cart.wxss */
.mall-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部搜索栏 */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.search-left {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.logo-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.app-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
  margin: 0 20rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.header-right {
  display: flex;
  align-items: center;
}

.menu-icon, .scan-icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
  opacity: 0.7;
}

/* 店铺信息 */
.store-info {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.store-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.store-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.5;
}

.store-details {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.location-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  opacity: 0.6;
}

.store-distance {
  font-size: 28rpx;
  color: #666;
  margin-right: 30rpx;
}

.store-status {
  font-size: 28rpx;
  color: #999;
}

.delivery-options {
  display: flex;
  margin-bottom: 30rpx;
}

.delivery-btn {
  padding: 15rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
  color: #666;
}

.delivery-btn.active {
  background-color: #4CAF50;
  color: white;
}

.store-expand {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.store-expand-text {
  font-size: 28rpx;
  color: #333;
}

.expand-action {
  font-size: 26rpx;
  color: #666;
}

.expand-arrow {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

/* 优惠卡片 */
.promotion-card {
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  margin: 0 30rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.promotion-content {
  flex: 1;
  color: white;
}

.promotion-text {
  margin-bottom: 20rpx;
}

.promotion-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.promotion-subtitle {
  font-size: 24rpx;
  opacity: 0.8;
  display: block;
  margin-bottom: 20rpx;
}

.promotion-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid white;
  border-radius: 50rpx;
  padding: 10rpx 30rpx;
  font-size: 26rpx;
}

.promotion-prices {
  margin-top: 20rpx;
}

.price-item {
  margin-bottom: 10rpx;
}

.price {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.price-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

.promotion-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
}

/* 分类导航 */
.category-nav {
  background-color: #fff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
}

.category-tabs {
  display: flex;
  align-items: center;
}

.category-tab {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  margin-right: 60rpx;
  position: relative;
}

.category-tab.active .tab-text {
  color: #333;
  font-weight: bold;
}

.tab-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #4CAF50;
  border-radius: 3rpx;
}

/* 内容区域 */
.content-wrapper {
  display: flex;
  background-color: #fff;
}

/* 侧边分类菜单 */
.side-menu {
  width: 200rpx;
  background-color: #f8f8f8;
  border-right: 1rpx solid #eee;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  position: relative;
  background-color: #f8f8f8;
}

.menu-item.active {
  background-color: #fff;
  border-right: 4rpx solid #4CAF50;
}

.menu-badge {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  background-color: #ff4757;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  transform: scale(0.8);
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.menu-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 1.2;
}

/* 商品区域 */
.products-area {
  flex: 1;
  padding: 30rpx;
}

/* VIP横幅 */
.vip-banner {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.vip-content {
  flex: 1;
  color: white;
}

.vip-tag {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  margin-bottom: 15rpx;
  display: inline-block;
}

.vip-text {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  display: block;
}

.vip-offer {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.vip-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid white;
  border-radius: 50rpx;
  padding: 15rpx 40rpx;
  font-size: 26rpx;
}

.vip-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
}

/* 商品列表 */
.products-list {
  flex: 1;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.product-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.product-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 15rpx;
  margin-right: 30rpx;
  background-color: #f0f0f0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.3;
  margin-bottom: 10rpx;
}

.product-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.product-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.product-price {
  font-size: 36rpx;
  color: #ff6b35;
  font-weight: bold;
}

.add-to-cart-btn {
  background-color: #4CAF50;
  color: white;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  border: none;
}

/* 底部购物车 */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #666;
  color: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.cart-info {
  display: flex;
  align-items: center;
}

.cart-badge {
  background-color: #4CAF50;
  color: white;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-right: 15rpx;
}

.cart-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
  opacity: 0.8;
}

.cart-text {
  font-size: 26rpx;
  color: #ccc;
} 