<view class="order-page">
  <!-- 地址信息 -->
  <view class="address-section" bindtap="selectAddress">
    <view class="address-header">
      <text class="address-title">收货地址</text>
      <text class="address-arrow">></text>
    </view>
    <view class="address-content">
      <view class="address-info">
        <text class="address-name">{{address.name}}</text>
        <text class="address-phone">{{address.phone}}</text>
      </view>
      <text class="address-detail">{{address.address}}</text>
    </view>
  </view>

  <!-- 商品列表 -->
  <view class="products-section">
    <view class="section-title">商品清单</view>
    <view class="product-item" wx:for="{{products}}" wx:key="id">
      <image-placeholder type="product" custom-class="product-image" src="{{item.image}}" mode="aspectFill"></image-placeholder>
      <view class="product-info">
        <text class="product-name">{{item.name}}</text>
        <text class="product-price">¥{{item.price}}</text>
        <text class="product-quantity">x{{item.quantity}}</text>
      </view>
    </view>
  </view>

  <!-- 支付方式 -->
  <view class="payment-section">
    <view class="section-title">支付方式</view>
    <radio-group class="payment-group" bindchange="onPaymentChange">
      <label class="payment-item">
        <radio value="wechat" checked="{{paymentMethod === 'wechat'}}"/>
        <text class="payment-text">微信支付</text>
      </label>
      <label class="payment-item">
        <radio value="alipay" checked="{{paymentMethod === 'alipay'}}"/>
        <text class="payment-text">支付宝</text>
      </label>
    </radio-group>
  </view>

  <!-- 备注 -->
  <view class="remark-section">
    <view class="section-title">订单备注</view>
    <textarea 
      class="remark-input" 
      placeholder="请输入备注信息（选填）"
      value="{{remark}}"
      bindinput="onRemarkInput"
      maxlength="200">
    </textarea>
  </view>

  <!-- 价格统计 -->
  <view class="price-section">
    <view class="price-item">
      <text class="price-label">商品总价</text>
      <text class="price-value">¥{{totalPrice}}</text>
    </view>
    <view class="price-item">
      <text class="price-label">运费</text>
      <text class="price-value">免费</text>
    </view>
    <view class="price-total">
      <text class="total-label">实付款</text>
      <text class="total-value">¥{{totalPrice}}</text>
    </view>
  </view>
</view>

<!-- 底部提交按钮 -->
<view class="bottom-bar">
  <view class="total-info">
    <text class="total-text">总计：¥{{totalPrice}}</text>
  </view>
  <button class="submit-btn" bindtap="submitOrder">提交订单</button>
</view> 