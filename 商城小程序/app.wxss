@import "/miniprogram_npm/tdesign-miniprogram/miniprogram_dist/common/style/theme/_index.wxss";
@import "./src/styles/tailwind.wxss";
/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

/* 容器样式 */
.container {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin: 20rpx;
  padding: 30rpx;
}

/* 按钮样式 */
.btn {
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-primary {
  background: linear-gradient(135deg, #007aff 0%, #5856d6 100%);
  color: #fff;
  border: none;
}

.btn-secondary {
  background-color: #f2f2f7;
  color: #007aff;
  border: 2rpx solid #007aff;
}

.btn-danger {
  background-color: #ff3b30;
  color: #fff;
  border: none;
}

.btn-small {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.btn-large {
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  height: 88rpx;
  line-height: 88rpx;
}

/* 文字样式 */
.text-primary {
  color: #007aff;
}

.text-secondary {
  color: #8e8e93;
}

.text-danger {
  color: #ff3b30;
}

.text-success {
  color: #34c759;
}

.text-warning {
  color: #ff9500;
}

.text-large {
  font-size: 36rpx;
  font-weight: 600;
}

.text-medium {
  font-size: 30rpx;
  font-weight: 500;
}

.text-small {
  font-size: 24rpx;
  color: #8e8e93;
}

.text-bold {
  font-weight: 600;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

/* 布局样式 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
  align-items: center;
}

.flex-around {
  justify-content: space-around;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

.flex-2 {
  flex: 2;
}

/* 间距样式 */
.mt-10 { margin-top: 20rpx; }
.mt-15 { margin-top: 30rpx; }
.mt-20 { margin-top: 40rpx; }
.mb-10 { margin-bottom: 20rpx; }
.mb-15 { margin-bottom: 30rpx; }
.mb-20 { margin-bottom: 40rpx; }
.ml-10 { margin-left: 20rpx; }
.mr-10 { margin-right: 20rpx; }

.pt-10 { padding-top: 20rpx; }
.pt-15 { padding-top: 30rpx; }
.pt-20 { padding-top: 40rpx; }
.pb-10 { padding-bottom: 20rpx; }
.pb-15 { padding-bottom: 30rpx; }
.pb-20 { padding-bottom: 40rpx; }
.pl-10 { padding-left: 20rpx; }
.pr-10 { padding-right: 20rpx; }

/* 商品卡片样式 */
.product-card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  margin-bottom: 20rpx;
}

.product-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff3b30;
}

.product-original-price {
  font-size: 24rpx;
  color: #8e8e93;
  text-decoration: line-through;
  margin-left: 10rpx;
}

/* 购物车样式 */
.cart-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.cart-item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.cart-item-info {
  flex: 1;
  margin-left: 20rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  justify-content: center;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f2f2f7;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #007aff;
}

.quantity-input {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  border: 2rpx solid #e5e5ea;
  border-radius: 8rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
}

/* 订单样式 */
.order-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.order-header {
  padding: 20rpx;
  border-bottom: 2rpx solid #f2f2f7;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.order-status.pending {
  background-color: #ff9500;
}

.order-status.confirmed {
  background-color: #007aff;
}

.order-status.shipped {
  background-color: #5856d6;
}

.order-status.completed {
  background-color: #34c759;
}

.order-status.cancelled {
  background-color: #8e8e93;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  color: #8e8e93;
  font-size: 28rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 40rpx;
  color: #8e8e93;
  font-size: 28rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

/* 优惠券样式 */
.coupon-card {
  background: linear-gradient(135deg, #ff6b6b 0%, #ffa500 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.coupon-card::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 0;
  height: 0;
  border-left: 40rpx solid transparent;
  border-top: 40rpx solid rgba(255, 255, 255, 0.2);
}

.coupon-amount {
  font-size: 48rpx;
  font-weight: 700;
}

.coupon-condition {
  font-size: 24rpx;
  opacity: 0.9;
  margin-top: 10rpx;
}

/* 底部安全区域 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 固定底部栏 */
.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 2rpx solid #e5e5ea;
  padding: 20rpx;
  z-index: 1000;
}

/* 轮播图样式 */
.swiper-container {
  height: 400rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.swiper-item {
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 分类网格 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #1d1d1f;
  text-align: center;
} 