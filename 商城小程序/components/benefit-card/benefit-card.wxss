/* components/benefit-card/benefit-card.wxss */

/* 会员等级信息样式 */
.member-info {
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.member-level {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.level-tag {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}

.level-name {
  color: #2c3e50;
  font-size: 28rpx;
  font-weight: 600;
}

/* 权益卡片主体样式 */
.benefit-card {
  background: white;
  border: 3rpx solid #ff4757;
  border-radius: 16rpx;
  margin: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(255, 71, 87, 0.15);
}

.benefit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.benefit-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.view-all-btn {
  color: #4a5a3a;
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(74, 90, 58, 0.1);
  transition: all 0.3s ease;
}

.view-all-btn:active {
  background: rgba(74, 90, 58, 0.2);
  transform: scale(0.95);
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 15rpx;
}

.benefit-item {
  text-align: center;
  padding: 20rpx 10rpx;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border-radius: 15rpx;
  position: relative;
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 71, 87, 0.1);
}

.benefit-item:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #e9ecef, #dee2e6);
}

.benefit-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
  display: block;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
  transition: transform 0.2s ease;
}

.benefit-item:active .benefit-icon {
  transform: scale(1.1);
}

.benefit-count {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  font-size: 18rpx;
  color: #ff4757;
  font-weight: 600;
  background: rgba(255, 255, 255, 0.95);
  padding: 2rpx 6rpx;
  border-radius: 8rpx;
  min-width: 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.benefit-name {
  font-size: 20rpx;
  color: #333;
  line-height: 1.3;
  display: block;
  font-weight: 500;
  margin-top: 8rpx;
} 