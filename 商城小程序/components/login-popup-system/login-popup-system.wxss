/* 响应式设计 */
@media (max-width: 750rpx) {
  .popup-container {
    max-height: 65vh;
  }
  
  .popup-header,
  .popup-actions {
    padding-left: 30rpx;
    padding-right: 30rpx;
  }
  
  /* 真机兼容性：调整内容区域高度 */
  .popup-content {
    height: 365rpx !important;
    min-height: 365rpx;
  }
}

