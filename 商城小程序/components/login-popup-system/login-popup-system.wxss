/* 登录弹窗系统样式 */
.popup-system {
  position: relative;
}

/* 调试信息样式 */
.debug-info {
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(255, 0, 0, 0.8);
  color: white;
  padding: 10rpx;
  font-size: 24rpx;
  z-index: 10000;
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.debug-info text {
  color: white;
  font-size: 20rpx;
}

/* 全屏触摸阻止遮罩 */
.fullscreen-touch-blocker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
  z-index: 999;
  touch-action: none !important;
  -webkit-overflow-scrolling: none;
  overscroll-behavior: none;
  pointer-events: auto;
  background: transparent;
}

/* 弹窗遮罩层 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
  min-height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: all;
  touch-action: none !important;
  -webkit-overflow-scrolling: none;
  overscroll-behavior: none;
}

.popup-container {
  width: 100%;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  position: relative;
  /* 移除63vh限制，确保内容区域能够正确显示365px高度 */
  /* max-height: 63vh; */
  display: flex;
  flex-direction: column;
  /* 确保弹窗内容可以滚动 */
  overflow: hidden;
  /* 设置弹窗整体高度，确保内容区域有足够空间 */
  height: auto;
  min-height: 500rpx;
  /* 阻止触摸事件传播 */
  pointer-events: auto;
  /* 阻止触摸滚动 */
  touch-action: none !important;
  /* 确保在iOS上也能阻止滚动 */
  -webkit-overflow-scrolling: touch;
  /* 阻止触摸反馈 */
  -webkit-tap-highlight-color: transparent;
  /* 确保弹窗容器阻止所有触摸事件 */
  pointer-events: all;
  /* 阻止触摸事件传播到父级 */
  isolation: isolate;
}

/* 弹窗内容样式 */
.popup-content {
  position: relative;
  background: #fff;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  z-index: 1001;
  display: flex;
  flex-direction: column;
}

.popup-header {
  padding: 40rpx 40rpx 20rpx;
  text-align: center;
  border-bottom: 2rpx solid #f0f0f0;
  position: relative;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f5f5f5;
  cursor: pointer;
}

.close-icon {
  font-size: 40rpx;
  color: #999;
