}

.popup-body {
  padding: 30rpx 40rpx;
  flex: 1;
  overflow-y: auto;
  max-height: 400rpx;
}

.popup-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.phone-input {
  width: 100%;
