  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.popup-footer {
  padding: 20rpx 40rpx 40rpx;
  display: flex;
  gap: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.popup-btn {
  flex: 1;
  height: 80rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
}

.reject-btn {
