  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.privacy-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.welcome-text {
  font-weight: 500;
  margin-bottom: 20rpx;
}

.agreement-text {
  margin-bottom: 20rpx;
}

.required-info,
