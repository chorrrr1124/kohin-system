/* 登录弹窗系统样式 */
.popup-system {
  position: relative;
}

.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  /* 防止弹窗显示时页面滚动 */
  overflow: hidden;
}

.popup-container {
  width: 100%;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  position: relative;
  /* 移除63vh限制，确保内容区域能够正确显示365px高度 */
  /* max-height: 63vh; */
  display: flex;
  flex-direction: column;
  /* 确保弹窗内容可以滚动 */
  overflow: hidden;
  /* 设置弹窗整体高度，确保内容区域有足够空间 */
  height: auto;
  min-height: 500rpx;
}

/* 通用样式 */
.popup-header {
  text-align: center;
  padding: 30rpx 40rpx 20rpx 40rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 弹窗内容区域 */
.popup-content {
  /* 调整高度为365px - 使用多种单位确保兼容性 */
  height: 365rpx !important;
  height: 365px !important;
  min-height: 365rpx !important;
  min-height: 365px !important;
  /* 移除flex相关设置，避免真机兼容性问题 */
  flex: none;
  /* 确保内容区域有明确的高度 */
  /* 移除所有overflow设置，让scroll-view自己处理 */
  padding: 0;
  /* 真机滚动优化 */
  overflow: visible;
  /* 确保内容区域在真机上正确显示 */
  position: relative;
  /* 强制设置高度，确保真机兼容性 */
  box-sizing: border-box;
  /* 真机强制高度设置 */
  display: block !important;
  /* 确保高度不被其他样式覆盖 */
  line-height: 1;
}

/* scroll-view容器 - 真机兼容性关键修复 */
.scroll-view-container {
  /* 真机兼容性：使用100%高度，确保scroll-view有正确的高度 */
  height: 100% !important;
  height: 365rpx !important;
  height: 365px !important;
  width: 100% !important;
  /* 真机滚动优化 */
  -webkit-overflow-scrolling: touch;
  /* 触摸滚动优化 */
  touch-action: pan-y;
  /* 确保滚动区域正确识别 */
  will-change: scroll-position;
  /* 真机滚动必须的设置 */
  overflow-y: auto !important;
  overflow-x: hidden !important;
  /* 真机兼容性：强制设置最小高度 */
  min-height: 365rpx !important;
  min-height: 365px !important;
  /* 强制设置最大高度，确保不超过父容器 */
  max-height: 365rpx !important;
  max-height: 365px !important;
  /* 确保scroll-view在真机上正确渲染 */
  position: relative;
  /* 真机滚动优化 */
  transform: translateZ(0);
  /* 真机滚动性能优化 */
  -webkit-transform: translateZ(0);
  -webkit-backface-visibility: hidden;
  -webkit-perspective: 1000;
}

/* 滚动内容 - 真机兼容性修复 */
.scroll-content {
  /* 真机兼容性：设置足够的内容高度来触发滚动 */
  min-height: 120%;
  /* 添加内边距 */
  padding: 20rpx 40rpx 40rpx 40rpx;
  /* 确保内容不会被裁剪 */
  box-sizing: border-box;
  /* 真机兼容性：确保内容正确显示 */
  position: relative;
  /* 真机滚动优化 */
  transform: translateZ(0);
}

.popup-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
  padding: 20rpx 40rpx 30rpx 40rpx;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  flex-shrink: 0;
  /* 确保按钮固定在底部，不悬浮 */
  position: relative;
  z-index: 10;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn::after {
  border: none;
}

.btn-primary {
  background: #07c160;
  color: #fff;
}

.btn-secondary {
  background: #fff;
  color: #666;
  border: 2rpx solid #ddd;
}

/* 1. 隐私政策弹窗样式 - 从下往上弹出 */
.privacy-popup {
  max-width: 100%;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.privacy-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.welcome-text {
  font-weight: 500;
  margin-bottom: 20rpx;
}

.agreement-text {
  margin-bottom: 20rpx;
}

.required-info,
.minimal-principle,
.agreement-meaning {
  margin-bottom: 20rpx;
}

.required-mark {
  color: #ff4757;
  font-weight: 600;
}

.additional-info {
  margin-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.info-section {
  margin-bottom: 25rpx;
}

.section-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.section-content {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
}

