/* components/gradient-carousel/gradient-carousel.wxss */

.carousel-container {
  position: relative;
  overflow: hidden;
  width: 100%;
}

/* 背景容器样式 */
.background-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  overflow: hidden;
}

/* 背景项容器 */
.background-item {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 1.5s ease-in-out;
  transform: scale(1);
}

/* 激活状态的背景项 - 淡入效果 */
.background-item.active {
  opacity: 1;
}

.carousel-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.gradient-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.85) 0%, rgba(139, 195, 74, 0.85) 50%, rgba(205, 220, 57, 0.85) 100%);
}

.carousel-content {
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 2;
  display: flex;
  flex-direction: column;
  /* 确保触摸事件能正确传递到子元素 */
  pointer-events: none;
}

/* 确保子组件可以正常接收触摸事件 */
.carousel-content > * {
  pointer-events: auto;
}

/* 自定义指示器 */
.custom-indicators {
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 12rpx;
  z-index: 3;
  background: rgba(0, 0, 0, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 50rpx;
  backdrop-filter: blur(10rpx);
}

.indicator-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  transition: all 0.3s ease;
  cursor: pointer;
}

.indicator-dot.active {
  background: #fff;
  transform: scale(1.2);
  box-shadow: 0 0 12rpx rgba(255, 255, 255, 0.8);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(1.05);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.background-item.active .carousel-bg-image {
  animation: fadeIn 1.2s ease-out;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .custom-indicators {
    bottom: 20rpx;
  }
  
  .indicator-dot {
    width: 10rpx;
    height: 10rpx;
  }
} 