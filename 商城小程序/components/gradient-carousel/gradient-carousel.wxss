/* components/gradient-carousel/gradient-carousel.wxss */

/* 轮播图容器 */
.carousel-container {
  position: relative;
  width: 100%;
  overflow: hidden;
  /* 确保触摸事件能正确触发 */
  touch-action: pan-y;
}

/* 背景容器 */
.background-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 背景图片项 */
.background-item {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 1.5s ease-in-out;
  transform: scale(1);
}

/* 激活状态的背景项 - 淡入效果 */
.background-item.active {
  opacity: 1;
}

/* 触摸滑动时的跟随效果 */
.background-item.active.sliding-left {
  transform: translateX(var(--slide-offset, 0px)) scale(1);
}

.background-item.active.sliding-right {
  transform: translateX(var(--slide-offset, 0px)) scale(1);
}

.carousel-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.gradient-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.85) 0%, rgba(139, 195, 74, 0.85) 50%, rgba(205, 220, 57, 0.85) 100%);
}

.carousel-content {
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 2;
  display: flex;
  flex-direction: column;
  /* 确保触摸事件能正确传递到子元素 */
  pointer-events: none;
}

/* 确保子组件可以正常接收触摸事件 */
.carousel-content .promotion-swiper {
  pointer-events: auto;
}

.carousel-content .swiper-container {
  pointer-events: auto;
}

/* 触摸手势提示 */
.touch-hint {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  z-index: 4;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.touch-hint.show {
  opacity: 1;
}

/* 触摸状态指示器 */
.touch-indicator {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 4;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.touch-indicator.show {
  opacity: 1;
}

.touch-indicator::before {
  content: '';
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  border-radius: 50%;
}

/* 自定义指示器 */
.custom-indicators {
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 12rpx;
  z-index: 3;
  background: rgba(0, 0, 0, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 50rpx;
  backdrop-filter: blur(10rpx);
}

.indicator-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  transition: all 0.3s ease;
  cursor: pointer;
}

.indicator-dot.active {
  background: #fff;
  transform: scale(1.2);
  box-shadow: 0 0 12rpx rgba(255, 255, 255, 0.8);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(1.05);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.background-item.active .carousel-bg-image {
  animation: fadeIn 1.2s ease-out;
}

/* 触摸滑动动画 */
@keyframes slideInLeft {
  from {
    transform: translateX(100%);
  }
  to {
    transform: translateX(0);
  }
}

@keyframes slideInRight {
  from {
    transform: translateX(-100%);
  }
  to {
    transform: translateX(0);
  }
}

.background-item.sliding-in-left {
  animation: slideInLeft 0.3s ease-out;
}

.background-item.sliding-in-right {
  animation: slideInRight 0.3s ease-out;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .custom-indicators {
    bottom: 20rpx;
  }
  
  .indicator-dot {
    width: 10rpx;
    height: 10rpx;
  }
} 