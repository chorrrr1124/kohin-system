<!--components/login-modal/login-modal.wxml-->
<view class="login-modal" wx:if="{{show}}" catchtouchmove="preventTouchMove">
  <!-- 遮罩层 -->
  <view class="modal-mask" bindtap="onMaskTap"></view>
  
  <!-- 弹窗内容 -->
  <view class="modal-content">
    <!-- 关闭按钮 -->
    <view class="close-btn" bindtap="onClose">
      <text class="close-icon">×</text>
    </view>
    
    <!-- Logo和标题 -->
    <view class="header">
      <view class="logo">
        <text class="logo-text">🛒</text>
      </view>
      <view class="title">商城小程序</view>
      <view class="subtitle">申请获取并验证你的手机号</view>
      <view class="desc">您可以完成注册和登录操作</view>
    </view>
    
    <!-- 手机号显示区域 -->
    <view class="phone-section" wx:if="{{phoneNumber}}">
      <view class="phone-number">{{phoneNumber}}</view>
      <view class="phone-provider">{{phoneProvider}}</view>
    </view>
    
    <!-- 按钮区域 -->
    <view class="button-section">
      <!-- 主要登录按钮 -->
      <button 
        class="login-btn primary" 
        bindtap="onLogin"
        loading="{{loginLoading}}"
        disabled="{{loginLoading}}"
      >
        {{loginLoading ? '登录中...' : '手机号一键登录'}}
      </button>
      
      <!-- 其他选项 -->
      <view class="other-options">
        <text class="option-btn" bindtap="onReject">不允许</text>
        <text class="option-btn" bindtap="onUseOtherPhone">使用其它号码</text>
      </view>
    </view>
    
    <!-- 协议说明 -->
    <view class="agreement">
      <text class="agreement-text">登录即表示同意</text>
      <text class="agreement-link" bindtap="onUserAgreement">《用户协议》</text>
      <text class="agreement-text">和</text>
      <text class="agreement-link" bindtap="onPrivacyPolicy">《隐私政策》</text>
    </view>
  </view>
</view>