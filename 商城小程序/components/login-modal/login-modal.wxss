/* components/login-modal/login-modal.wxss */
.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  display: flex;
  align-items: flex-end;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx 20rpx 0 0;
  padding: 60rpx 40rpx 40rpx;
  animation: slideUp 0.3s ease-out;
  color: white;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.close-btn {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.close-icon {
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  margin-bottom: 20rpx;
}

.logo-text {
  font-size: 80rpx;
  display: inline-block;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: white;
}

.subtitle {
  font-size: 32rpx;
  margin-bottom: 10rpx;
  color: rgba(255, 255, 255, 0.9);
}

.desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

.phone-section {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 40rpx 0;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10px);
}

.phone-number {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: white;
}

.phone-provider {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.button-section {
  margin-bottom: 40rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn.primary {
  background: linear-gradient(90deg, #FFD700 0%, #FFA500 100%);
  color: #333;
  box-shadow: 0 8rpx 20rpx rgba(255, 215, 0, 0.3);
}

.login-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(255, 215, 0, 0.3);
}

.login-btn[disabled] {
  opacity: 0.6;
  transform: none !important;
}

.other-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.option-btn {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 20rpx;
  text-decoration: underline;
}

.option-btn:active {
  color: rgba(255, 255, 255, 0.6);
}

.agreement {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.5;
}

.agreement-text {
  color: rgba(255, 255, 255, 0.6);
}

.agreement-link {
  color: #FFD700;
  text-decoration: underline;
}

.agreement-link:active {
  color: #FFA500;
}

/* 防止背景滚动 */
.login-modal {
  overflow: hidden;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .modal-content {
    padding: 50rpx 30rpx 30rpx;
  }
  
  .title {
    font-size: 44rpx;
  }
  
  .login-btn {
    height: 80rpx;
    font-size: 30rpx;
  }
}